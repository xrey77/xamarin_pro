<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Protech.Register" Title="Diebold-Nixdorf">
    <ContentPage.Resources>
        <StyleSheet>
            <![CDATA[
            ^ContentPage {
                background-color: black;
            }
            .title {
              background-color: orange;
              color: white;
              margin-top: -20;
              margin-left: -20;
              margin-right: -20;
            }
            .xframe {
               height: 350;
               width: 300;
            }
            ]]>
        </StyleSheet>
     </ContentPage.Resources>


    <ContentPage.Content>

        <AbsoluteLayout Margin="20" VerticalOptions="Center" HorizontalOptions="Center">

         <Frame BackgroundColor="Coral" StyleClass="xframe" CornerRadius="20">
             <Grid>
                 <Grid.RowDefinitions>
                     <RowDefinition Height="Auto"/>
                     <RowDefinition Height="Auto"/>
                     <RowDefinition Height="Auto"/>
                     <RowDefinition Height="Auto"/>
                     <RowDefinition Height="Auto"/>
                     <RowDefinition Height="Auto"/>
                     <RowDefinition Height="2*"/>                     
                  </Grid.RowDefinitions>
                 <Grid.ColumnDefinitions>
                     <ColumnDefinition/>
                 </Grid.ColumnDefinitions>
                 <Label Text="Account Registration" WidthRequest="500" HorizontalTextAlignment="Center" Grid.Row="0" Grid.Column="0" StyleClass="title" FontSize="Title"/>
                 <Entry x:Name="Firstname" Keyboard="Text" Placeholder="Enter First Name" PlaceholderColor="WhiteSmoke" TextColor="Yellow" Grid.Row="1" Grid.Column="0"/>
                 <Entry x:Name="Lastname" Keyboard="Text" Placeholder="Enter Last Name" PlaceholderColor="WhiteSmoke" TextColor="Yellow" Grid.Row="2" Grid.Column="0"/>
                 <Entry x:Name="Email" Keyboard="Email" Placeholder="Enter Email Address" PlaceholderColor="WhiteSmoke" TextColor="Yellow" Grid.Row="3" Grid.Column="0"/>
                 <Entry x:Name="Username" Keyboard="Text" Placeholder="Enter User Name" PlaceholderColor="WhiteSmoke" TextColor="Yellow" Grid.Row="4" Grid.Column="0"/>
                 <Entry x:Name="Password" Keyboard="Text" IsPassword="True" Placeholder="Enter Password" PlaceholderColor="WhiteSmoke" TextColor="Yellow" Grid.Row="5" Grid.Column="0"/>
                 <ImageButton Source="submit.png" Grid.Row="6" Grid.Column="0" BackgroundColor="Transparent"
                              HorizontalOptions="Start" Clicked="OnSaveRegister" />
             </Grid>
         </Frame>
        </AbsoluteLayout>



    </ContentPage.Content>
</ContentPage>
